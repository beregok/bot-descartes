---
permalink: "api/articles.json"
---

{
  "conformsTo": "https://bot-descartes.netlify.com/",
  "articles": [
    {% for post in site.posts %}{% unless post.link %}{
      "title": {{ post.title | jsonify }},
      "file": "{% for resource in post.resources %}{{ resource.link | prepend: site.baseurl | prepend: site.url }}{% endfor %}",
      "img": "{% if post.image %}{{ site.url }}/{{ post.image }}{% endif %}",
      "date": "{{ post.date | date_to_rfc822 }}"
      }{% unless forloop.last %},
      {% endunless %}{% endunless %}{% endfor %}
  ]
}
